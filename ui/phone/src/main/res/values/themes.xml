<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Theme.SiyuCloud.phone" parent="Theme.SiyuCloud">
        <item name="mainTab">@style/Theme.SiyuCloud.phone.tab</item>
    </style>


    <style name="Theme.SiyuCloud.phone.tab">
        <item name="tabMargin">10dp</item>
        <item name="tabTextSize">18sp</item>
        <item name="tabSelectedTextSize">25sp</item>
        <item name="position">1</item>
    </style>
    <!-- /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->

    <attr name="mainTab" format="reference" />

    <declare-styleable name="SiyuCloudTheme">

        <!-- tab页签之间的间距 -->
        <attr name="tabMargin" format="dimension" />
        <!-- tab页签文字大小 -->
        <attr name="tabTextSize" format="dimension" />
        <!-- tab页签选中时的文字大小 -->
        <attr name="tabSelectedTextSize" format="dimension" />
        <!-- tab页签的位置 -->
        <attr name="position" format="integer" />


    </declare-styleable>
</resources>